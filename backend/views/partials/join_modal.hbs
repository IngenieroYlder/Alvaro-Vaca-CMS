<div id="joinModal" class="fixed inset-0 z-[100] hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <!-- Backdrop -->
    <div class="fixed inset-0 bg-gray-900/75 backdrop-blur-sm transition-opacity" onclick="closeJoinModal()"></div>

    <div class="fixed inset-0 z-10 overflow-y-auto">
        <div class="flex min-h-full items-center justify-center p-4 text-center sm:p-0">
            <!-- Modal Panel -->
            <div
                class="relative transform overflow-hidden rounded-3xl bg-white text-left shadow-2xl transition-all sm:my-8 sm:w-full sm:max-w-5xl">

                <!-- Close Button -->
                <button onclick="closeJoinModal()"
                    class="absolute top-4 right-4 z-20 p-2 rounded-full bg-white/50 hover:bg-white text-gray-500 hover:text-gray-800 transition-colors">
                    <span class="material-icons-round">close</span>
                </button>

                <div class="grid grid-cols-1 lg:grid-cols-2">
                    <!-- Left Side: Image & Info -->
                    <div class="relative hidden lg:block bg-gray-900">
                        <img src="/assets/alvaro.png" alt="Alvaro Vaca"
                            class="absolute inset-0 h-full w-full object-cover opacity-60">
                        <div class="absolute inset-0 bg-gradient-to-t from-primary/90 to-transparent"></div>
                        <div class="relative h-full flex flex-col justify-end p-12 text-white">
                            <div class="mb-4">
                                <span
                                    class="inline-block px-3 py-1 rounded-full bg-sunflower text-primary font-bold text-xs mb-4">Cercanía
                                    y Compromiso</span>
                                <h3 class="font-display font-bold text-4xl mb-2">Alvaro Vaca</h3>
                                <img src="/assets/4_LOGO.png" alt="Partido Alianza Verde #75"
                                    class="h-12 w-auto object-contain mt-2">
                            </div>
                            <p class="text-green-200 text-sm leading-relaxed mb-8">
                                Comprometido con la sostenibilidad, la justicia social y la transparencia.
                            </p>

                            <div class="space-y-4">
                                <div
                                    class="hidden flex items-center space-x-3 bg-white/10 p-3 rounded-xl backdrop-blur-md">
                                    <div
                                        class="w-10 h-10 rounded-full bg-green-500/20 flex items-center justify-center text-green-300">
                                        <span class="material-icons-round">email</span>
                                    </div>
                                    <div>
                                        <p class="text-xs text-green-200">Correo Electrónico</p>
                                        <p class="font-bold text-sm">contacto@alvarovaca.com</p>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                    <!-- Right Side: Form -->
                    <div class="p-8 lg:p-12 bg-white">
                        <div class="bg-primary text-white p-6 rounded-2xl mb-8 -mt-20 lg:mt-0 shadow-lg relative z-10">
                            <h3 class="font-display font-bold text-2xl mb-1">Súmate al Equipo</h3>
                            <p class="text-green-100 text-sm">Completa el formulario para ser voluntario o líder.</p>
                        </div>

                        <form id="formSumate" class="space-y-5" onsubmit="submitSumate(event)">
                            <input type="hidden" name="tipo" value="sumate">
                            <input type="hidden" name="formId" value="sumate-form">
                            <input type="hidden" name="tieneWhatsapp" value="true">

                            <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                                <div>
                                    <label
                                        class="block text-xs font-bold text-gray-500 uppercase tracking-wide mb-1">Nombre
                                        Completo</label>
                                    <div class="relative">
                                        <span
                                            class="material-icons-round absolute left-3 top-3 text-gray-400 text-lg">person</span>
                                        <input type="text" name="nombre" placeholder="Juan Pérez"
                                            class="w-full pl-10 pr-4 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all bg-gray-50 focus:bg-white"
                                            required>
                                    </div>
                                </div>
                                <div>
                                    <label
                                        class="block text-xs font-bold text-gray-500 uppercase tracking-wide mb-1">Correo
                                        Electrónico</label>
                                    <div class="relative">
                                        <span
                                            class="material-icons-round absolute left-3 top-3 text-gray-400 text-lg">email</span>
                                        <input type="email" name="email" placeholder="juan@ejemplo.com"
                                            class="w-full pl-10 pr-4 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all bg-gray-50 focus:bg-white"
                                            required>
                                    </div>
                                </div>
                            </div>

                            <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                                <div>
                                    <label
                                        class="block text-xs font-bold text-gray-500 uppercase tracking-wide mb-1">Municipio
                                        / Ciudad</label>
                                    <div class="relative">
                                        <span
                                            class="material-icons-round absolute left-3 top-3 text-gray-400 text-lg">location_on</span>
                                        <input type="text" name="ciudad" placeholder="Villavicencio"
                                            class="w-full pl-10 pr-4 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all bg-gray-50 focus:bg-white"
                                            required>
                                    </div>
                                </div>
                                <div>
                                    <label
                                        class="block text-xs font-bold text-gray-500 uppercase tracking-wide mb-1">Celular
                                        (WhatsApp)</label>
                                    <div class="relative">
                                        <span
                                            class="material-icons-round absolute left-3 top-3 text-gray-400 text-lg">smartphone</span>
                                        <input type="tel" name="telefono" placeholder="300 000 0000"
                                            class="w-full pl-10 pr-4 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all bg-gray-50 focus:bg-white"
                                            required>
                                    </div>
                                </div>
                            </div>

                            <div>
                                <label class="block text-xs font-bold text-gray-500 uppercase tracking-wide mb-3">¿Cómo
                                    quieres apoyar?</label>
                                <div class="grid grid-cols-2 gap-4">
                                    <label class="cursor-pointer relative">
                                        <input type="radio" name="rol_sumate" value="voluntario" class="peer sr-only"
                                            checked>
                                        <div
                                            class="p-4 rounded-xl border-2 border-gray-200 hover:border-gray-300 peer-checked:border-primary peer-checked:bg-green-50 transition-all text-center h-full">
                                            <span
                                                class="material-icons-round text-3xl text-gray-400 peer-checked:text-primary mb-2">volunteer_activism</span>
                                            <div class="font-bold text-gray-700 peer-checked:text-primary">Voluntariado
                                            </div>
                                            <div class="text-xs text-gray-500 mt-1">Logística y eventos</div>
                                        </div>
                                        <div
                                            class="absolute top-2 right-2 opacity-0 peer-checked:opacity-100 text-primary transition-opacity">
                                            <span class="material-icons-round text-lg">check_circle</span>
                                        </div>
                                    </label>

                                    <label class="cursor-pointer relative">
                                        <input type="radio" name="rol_sumate" value="lider" class="peer sr-only">
                                        <div
                                            class="p-4 rounded-xl border-2 border-gray-200 hover:border-gray-300 peer-checked:border-primary peer-checked:bg-green-50 transition-all text-center h-full">
                                            <span
                                                class="material-icons-round text-3xl text-gray-400 peer-checked:text-primary mb-2">groups</span>
                                            <div class="font-bold text-gray-700 peer-checked:text-primary">Líder Zonal
                                            </div>
                                            <div class="text-xs text-gray-500 mt-1">Coordina tu barrio</div>
                                        </div>
                                        <div
                                            class="absolute top-2 right-2 opacity-0 peer-checked:opacity-100 text-primary transition-opacity">
                                            <span class="material-icons-round text-lg">check_circle</span>
                                        </div>
                                    </label>
                                </div>
                            </div>

                            <div>
                                <label
                                    class="block text-xs font-bold text-gray-500 uppercase tracking-wide mb-1">Mensaje
                                    Adicional</label>
                                <textarea name="mensaje" rows="3" placeholder="¿Tienes alguna idea o propuesta?"
                                    class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all bg-gray-50 focus:bg-white resize-none"></textarea>
                            </div>

                            <div class="flex items-start">
                                <div class="flex h-5 items-center">
                                    <input id="terms" type="checkbox"
                                        class="h-4 w-4 rounded border-gray-300 text-primary focus:ring-primary"
                                        required>
                                </div>
                                <div class="ml-3 text-sm">
                                    <label for="terms" class="font-medium text-gray-700">Acepto la <a
                                            href="/politica-de-privacidad" target="_blank"
                                            class="text-primary hover:underline">política de tratamiento de datos</a> y
                                        autorizo el contacto.</label>
                                </div>
                            </div>

                            <button type="submit" id="btnSumate"
                                class="w-full py-4 bg-gray-900 hover:bg-black text-white font-bold rounded-xl shadow-lg transform hover:-translate-y-0.5 transition-all flex justify-center items-center gap-2">
                                <span>Enviar Formulario</span>
                            </button>
                        </form>

                        <script>
                            async function submitSumate(e) {
                                e.preventDefault();
                                const btn = document.getElementById('btnSumate');
                                const originalText = btn.innerHTML;
                                btn.disabled = true;
                                btn.innerHTML = '<span class="material-symbols-outlined animate-spin text-sm">progress_activity</span> Enviando...';

                                const formData = new FormData(e.target);
                                const data = Object.fromEntries(formData.entries());
                                // Conversion to proper types if needed
                                data.tieneWhatsapp = true;

                                try {
                                    const response = await fetch('/contactos', {
                                        method: 'POST',
                                        headers: { 'Content-Type': 'application/json' },
                                        body: JSON.stringify(data)
                                    });

                                    if (response.ok) {
                                        alert('¡Gracias por sumarte! Hemos recibido tus datos y te contactaremos pronto.');
                                        e.target.reset();
                                        closeJoinModal();
                                    } else {
                                        alert('Hubo un error al enviar el formulario. Por favor intenta de nuevo.');
                                    }
                                } catch (error) {
                                    console.error(error);
                                    alert('Error de conexión. Verifica tu internet e intenta de nuevo.');
                                } finally {
                                    btn.disabled = false;
                                    btn.innerHTML = originalText;
                                }
                            }
                        </script>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>