{{#> main}}

<!-- Hero Section using Partial -->
{{> hero
label="TRABAJA CON NOSOTROS"
title="Únete a Nuestro Equipo"
subtitle="Construya con nosotros el futuro de la movilidad y la gestión eficiente."
}}

<!-- Content -->
<section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">

        <!-- Filter Placeholder -->
        <div class="flex flex-wrap gap-4 mb-12 justify-center">
            <a href="/vacantes"
                class="px-6 py-2 rounded-full bg-white border border-gray-200 text-gray-600 hover:bg-secondary hover:text-white transition-all font-bold shadow-sm">Todas</a>
            {{#each categorias}}
            <a href="/vacantes?categoria={{this.slug}}"
                class="px-6 py-2 rounded-full bg-white border border-gray-200 text-gray-600 hover:bg-secondary hover:text-white transition-all font-bold shadow-sm">{{this.nombre}}</a>
            {{/each}}
        </div>

        <div class="grid grid-cols-1 gap-6 max-w-4xl mx-auto">
            {{#each vacantes}}
            <div
                class="bg-white rounded-2xl p-6 md:p-8 shadow-sm hover:shadow-lg transition-all border border-gray-100 flex flex-col md:flex-row items-start md:items-center gap-6 group">

                {{#if this.imagen}}
                <div class="w-full md:w-48 h-48 rounded-xl overflow-hidden shrink-0 border border-gray-100 relative">
                    <img src="{{this.imagen}}" alt="{{this.titulo}}"
                        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
                </div>
                {{/if}}

                <div class="flex-1">
                    <div class="flex items-center gap-3 mb-2">
                        {{#if this.categoria}}
                        <span
                            class="px-3 py-1 bg-blue-50 text-blue-600 rounded-lg text-xs font-bold uppercase tracking-wider">
                            {{this.categoria.nombre}}
                        </span>
                        {{/if}}
                        <span
                            class="px-3 py-1 bg-gray-100 text-gray-500 rounded-lg text-xs font-bold uppercase tracking-wider">
                            {{this.tipoContrato}}
                        </span>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-2">
                        <a href="/vacantes/{{this.slug}}"
                            class="hover:text-secondary transition-colors">{{this.titulo}}</a>
                    </h3>
                    <div class="flex items-center gap-4 text-sm text-gray-500">
                        <span class="flex items-center gap-1">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z">
                                </path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                            {{this.ubicacion}}
                        </span>
                        <span class="flex items-center gap-1">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            Cierra: {{formatDate this.fechaCierre}}
                        </span>
                    </div>
                </div>
                <div>
                    <a href="/vacantes/{{this.slug}}"
                        class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-bold rounded-xl text-white bg-secondary hover:bg-secondary/90 transition-all shadow-lg shadow-secondary/30 w-full md:w-auto">
                        Ver Oferta
                        <svg class="w-5 h-5 ml-2 -mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                        </svg>
                    </a>
                </div>
            </div>
            {{/each}}

            {{#unless vacantes}}
            <div class="text-center py-20">
                <div
                    class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-gray-100 mb-6 text-gray-400">
                    <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z">
                        </path>
                    </svg>
                </div>
                <h3 class="text-xl font-bold text-gray-400">No hay vacantes disponibles por el momento.</h3>
            </div>
            {{/unless}}
        </div>
    </div>
</section>

{{/main}}