{{#> main}}

{{!-- Header / Breadcrumbs --}}
<div class="bg-gray-50 border-b border-gray-200 pt-32 pb-8">
    <div class="container mx-auto px-4">
        <nav class="flex text-sm font-medium text-gray-500 mb-4" aria-label="Breadcrumb">
            <ol class="flex flex-wrap items-center gap-1 md:gap-3">
                <li class="inline-flex items-center">
                    <a href="/" class="hover:text-primary">Inicio</a>
                </li>
                <li>
                    <div class="flex items-center">
                        <svg class="w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                            fill="none" viewBox="0 0 6 10">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="m1 9 4-4-4-4" />
                        </svg>
                        <a href="/noticias" class="ml-1 hover:text-primary">Noticias</a>
                    </div>
                </li>
                {{#if noticia.categoria}}
                <li>
                    <div class="flex items-center">
                        <svg class="w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                            fill="none" viewBox="0 0 6 10">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="m1 9 4-4-4-4" />
                        </svg>
                        <a href="/noticias?categoria={{noticia.categoria.slug}}"
                            class="ml-1 hover:text-primary">{{noticia.categoria.nombre}}</a>
                    </div>
                </li>
                {{/if}}
                <li aria-current="page">
                    <div class="flex items-center">
                        <svg class="w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                            fill="none" viewBox="0 0 6 10">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="m1 9 4-4-4-4" />
                        </svg>
                        <span
                            class="ml-1 text-gray-700 break-words line-clamp-2 md:line-clamp-none">{{noticia.titulo}}</span>
                    </div>
                </li>
            </ol>
        </nav>
    </div>
</div>

<article>
    {{!-- Hero Image --}}
    {{#if noticia.imagenPrincipal}}
    <div class="w-full h-[400px] md:h-[500px] relative">
        <img src="{{noticia.imagenPrincipal}}" alt="{{noticia.titulo}}" class="w-full h-full object-cover">
        <div class="absolute inset-0 bg-gradient-to-t from-gray-900/80 to-transparent"></div>
    </div>
    {{/if}}

    <div class="container mx-auto px-4 -mt-20 relative z-10">
        <div class="max-w-4xl mx-auto bg-white rounded-3xl p-8 md:p-12 shadow-xl">
            {{!-- Metadata --}}
            <div class="flex items-center justify-between mb-8 border-b border-gray-100 pb-8">
                <div class="flex items-center gap-4">
                    {{#if noticia.autor}}
                    <div class="flex items-center gap-3">
                        <div class="w-12 h-12 rounded-full bg-gray-100 overflow-hidden">
                            {{#if noticia.autor.fotoPerfil}}
                            <img src="{{noticia.autor.fotoPerfil}}" class="w-full h-full object-cover">
                            {{else}}
                            <span
                                class="w-full h-full flex items-center justify-center font-bold text-gray-400 uppercase text-lg">{{firstChar
                                noticia.autor.nombre}}</span>
                            {{/if}}
                        </div>
                        <div>
                            <p class="font-bold text-gray-900 leading-none">{{noticia.autor.nombre}}</p>
                            <p class="text-sm text-gray-500">Autor</p>
                        </div>
                    </div>
                    {{/if}}
                </div>
                <div class="text-right">
                    <p class="font-bold text-gray-900 leading-none">{{formatDate noticia.fechaPublicacion}}</p>
                    <p class="text-sm text-gray-500">Fecha de publicación</p>
                </div>
            </div>

            <h1 class="text-3xl md:text-5xl font-black text-gray-900 mb-8 leading-tight">{{noticia.titulo}}</h1>

            <div class="prose prose-lg prose-blue max-w-none text-gray-600 leading-relaxed">
                {{{noticia.contenido}}}
            </div>

            {{!-- Gallery --}}
            {{#if noticia.galeria}}
            <div class="mt-12 grid grid-cols-2 md:grid-cols-3 gap-4">
                {{#each noticia.galeria}}
                <div class="rounded-xl overflow-hidden aspect-square">
                    <img src="{{this}}"
                        class="w-full h-full object-cover hover:scale-110 transition-transform cursor-zoom-in">
                </div>
                {{/each}}
            </div>
            {{/if}}
        </div>
    </div>
</article>

{{!-- Related News --}}
{{#if relacionadas}}
<section class="py-20 bg-gray-50 mt-20">
    <div class="container mx-auto px-4">
        <div class="flex items-center justify-between mb-12">
            <h2 class="text-3xl font-bold text-gray-900">Noticias Relacionadas</h2>
            <a href="/noticias" class="text-primary font-bold hover:underline">Ver todas</a>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {{#each relacionadas}}
            <article class="bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-lg transition-all">
                <a href="/noticias/{{this.slug}}" class="block aspect-video relative overflow-hidden">
                    {{#if this.imagenPrincipal}}
                    <img src="{{this.imagenPrincipal}}" class="w-full h-full object-cover">
                    {{else}}
                    <div class="w-full h-full bg-gray-200"></div>
                    {{/if}}
                </a>
                <div class="p-6">
                    <h3 class="font-bold text-lg mb-2 line-clamp-2"><a href="/noticias/{{this.slug}}"
                            class="hover:text-primary">{{this.titulo}}</a></h3>
                    <p class="text-sm text-gray-500 line-clamp-2">{{this.resumen}}</p>
                </div>
            </article>
            {{/each}}
        </div>
    </div>
</section>
{{/if}}

{{!-- Comments --}}
<section class="py-20 bg-white">
    <div class="max-w-3xl mx-auto px-4">
        <h3 class="text-2xl font-bold text-gray-900 mb-8">Comentarios</h3>
        <div class="bg-gray-50 rounded-2xl p-8">
            <p class="text-gray-500 text-center mb-6 text-sm">Su dirección de correo electrónico no será publicada. Los
                campos obligatorios están marcados con *</p>
            <form action="/noticias/comentar/{{noticia.id}}" method="POST" class="space-y-4">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <input type="text" name="nombre" placeholder="Nombre *" required
                        class="p-3 rounded-xl border border-gray-200 w-full focus:ring-2 focus:ring-primary/20 outline-none">
                    <input type="email" name="email" placeholder="Correo electrónico *" required
                        class="p-3 rounded-xl border border-gray-200 w-full focus:ring-2 focus:ring-primary/20 outline-none">
                </div>
                <input type="text" name="website" placeholder="Sitio web (Opcional)"
                    class="p-3 rounded-xl border border-gray-200 w-full focus:ring-2 focus:ring-primary/20 outline-none">
                <textarea name="comentario" rows="4" placeholder="Escriba su comentario aquí..." required
                    class="p-3 rounded-xl border border-gray-200 w-full focus:ring-2 focus:ring-primary/20 outline-none"></textarea>

                {{!-- Simple HoneyPot AntiSpam --}}
                <input type="text" name="fullname_field_gotcha" style="display:none;" tabindex="-1" autocomplete="off">

                <button type="submit"
                    class="w-full py-3 bg-primary text-white font-bold rounded-xl hover:bg-primary/90 transition-colors shadow-lg shadow-primary/30">Publicar
                    Comentario</button>
            </form>
        </div>
    </div>
</section>

{{> join_modal}}

<script>
    function openJoinModal() {
        const modal = document.getElementById('joinModal');
        if (modal) {
            modal.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        } else {
            console.error('Modal "joinModal" not found in DOM');
        }
    }

    function closeJoinModal() {
        const modal = document.getElementById('joinModal');
        if (modal) {
            modal.classList.add('hidden');
            document.body.style.overflow = '';
        }
    }
</script>
{{/main}}