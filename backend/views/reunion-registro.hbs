<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro Asistencia - {{reunion.nombre}}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700;800&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: "#006838",
                        secondary: "#0D9A49",
                        sunflower: "#D7DF23",
                    },
                    fontFamily: {
                        display: ["Montserrat", "sans-serif"],
                        body: ["Open Sans", "sans-serif"],
                    },
                },
            },
        }
    </script>
</head>
<body class="bg-gray-50 font-body min-h-screen py-8 px-4 flex justify-center">

    <div class="max-w-2xl w-full bg-white rounded-3xl shadow-xl overflow-hidden self-start sm:self-center">
        <!-- Header -->
        <div class="bg-primary p-8 text-center relative overflow-hidden">
            <div class="absolute top-0 left-0 w-64 h-64 bg-white/5 rounded-full blur-3xl -translate-x-10 -translate-y-10"></div>
            <img src="/assets/1_LOGO.png" alt="Logo" class="h-12 mx-auto mb-6 relative z-10 brightness-0 invert">
            
            <span class="inline-block px-3 py-1 bg-sunflower/20 text-sunflower border border-sunflower/30 rounded-full text-xs font-bold mb-3 relative z-10 tracking-wide uppercase">Registro de Asistencia</span>
            <h1 class="text-2xl md:text-3xl font-display font-bold text-white relative z-10 mb-2">{{reunion.nombre}}</h1>
            <div class="flex flex-col md:flex-row items-center justify-center gap-3 text-green-100 text-sm relative z-10 mt-4">
                <span class="flex items-center gap-1 bg-white/10 px-3 py-1 rounded-lg"><span class="material-icons-round text-sm">calendar_today</span> {{reunion.fechaFormatted}}</span>
                <span class="flex items-center gap-1 bg-white/10 px-3 py-1 rounded-lg"><span class="material-icons-round text-sm">place</span> {{reunion.lugar}}</span>
            </div>
        </div>

        <!-- Form -->
        <div class="p-8 md:p-10">
            <form id="attendanceForm" onsubmit="submitAttendance(event)" class="space-y-6">
                <!-- Hidden Meeting ID -->
                <input type="hidden" name="reunionId" value="{{reunion.id}}">

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Nombres -->
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase tracking-wide mb-2">Nombres</label>
                        <div class="relative">
                            <span class="material-icons-round absolute left-3 top-3 text-gray-400">person</span>
                            <input type="text" name="nombre" placeholder="Tus Nombres" required maxlength="50"
                                class="w-full pl-10 pr-4 py-3 rounded-xl border border-gray-200 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all bg-gray-50 focus:bg-white">
                        </div>
                    </div>
                     <!-- Apellidos -->
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase tracking-wide mb-2">Apellidos</label>
                        <div class="relative">
                            <span class="material-icons-round absolute left-3 top-3 text-gray-400">person_outline</span>
                            <input type="text" name="apellido" placeholder="Tus Apellidos" required maxlength="50"
                                class="w-full pl-10 pr-4 py-3 rounded-xl border border-gray-200 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all bg-gray-50 focus:bg-white">
                        </div>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Documento -->
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase tracking-wide mb-2">Documento de Identidad</label>
                        <div class="relative">
                            <span class="material-icons-round absolute left-3 top-3 text-gray-400">badge</span>
                            <input type="text" name="documento" placeholder="Cédula" required maxlength="20"
                                class="w-full pl-10 pr-4 py-3 rounded-xl border border-gray-200 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all bg-gray-50 focus:bg-white">
                        </div>
                    </div>

                    <!-- Teléfono -->
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase tracking-wide mb-2">Celular / WhatsApp</label>
                        <div class="relative">
                            <span class="material-icons-round absolute left-3 top-3 text-gray-400">smartphone</span>
                            <input type="tel" name="telefono" placeholder="300 000 0000" required maxlength="10" pattern="[0-9]{10}" title="Debe ser un número válido de 10 dígitos"
                                class="w-full pl-10 pr-4 py-3 rounded-xl border border-gray-200 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all bg-gray-50 focus:bg-white">
                        </div>
                    </div>
                </div>

                <!-- Location Selectors -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase tracking-wide mb-2">Departamento</label>
                        <div class="relative">
                             <span class="material-icons-round absolute left-3 top-3 text-gray-400">map</span>
                            <select id="departamentoSelect" name="departamento" class="w-full pl-10 pr-4 py-3 rounded-xl border border-gray-200 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all bg-gray-50 focus:bg-white appearance-none">
                                <option value="">Selecciona...</option>
                                <!-- Populated by JS -->
                            </select>
                        </div>
                    </div>
                     <div>
                        <label class="block text-xs font-bold text-gray-500 uppercase tracking-wide mb-2">Municipio</label>
                        <div class="relative">
                             <span class="material-icons-round absolute left-3 top-3 text-gray-400">location_city</span>
                            <select id="municipioSelect" name="municipio" class="w-full pl-10 pr-4 py-3 rounded-xl border border-gray-200 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all bg-gray-50 focus:bg-white appearance-none">
                                <option value="">Selecciona...</option>
                                <!-- Populated by JS -->
                            </select>
                        </div>
                    </div>
                </div>
                
                 <!-- Other Municipality Input -->
                <div id="otroMunicipioContainer" class="hidden">
                    <label class="block text-xs font-bold text-gray-500 uppercase tracking-wide mb-2">Escribe tu Municipio</label>
                     <div class="relative">
                        <span class="material-icons-round absolute left-3 top-3 text-gray-400">edit_location</span>
                        <input type="text" id="otroMunicipioInput" name="municipio_otro" placeholder="Nombre del Municipio" maxlength="50"
                            class="w-full pl-10 pr-4 py-3 rounded-xl border border-gray-200 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all bg-gray-50 focus:bg-white">
                    </div>
                </div>

                <!-- Dirección -->
                <div>
                    <label class="block text-xs font-bold text-gray-500 uppercase tracking-wide mb-2">Dirección de Residencia</label>
                    <div class="relative">
                        <span class="material-icons-round absolute left-3 top-3 text-gray-400">home</span>
                        <input type="text" name="direccion" placeholder="Dirección completa" maxlength="100"
                            class="w-full pl-10 pr-4 py-3 rounded-xl border border-gray-200 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all bg-gray-50 focus:bg-white">
                    </div>
                </div>

                <!-- Email -->
                <div>
                    <label class="block text-xs font-bold text-gray-500 uppercase tracking-wide mb-2">Correo Electrónico</label>
                    <div class="relative">
                        <span class="material-icons-round absolute left-3 top-3 text-gray-400">email</span>
                        <input type="email" name="email" placeholder="ejemplo@correo.com" maxlength="150"
                            class="w-full pl-10 pr-4 py-3 rounded-xl border border-gray-200 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all bg-gray-50 focus:bg-white">
                    </div>
                </div>

                <!-- Habeas Data -->
                <div class="bg-gray-50 p-4 rounded-xl border border-gray-100">
                    <label class="flex items-start gap-3 cursor-pointer">
                        <div class="flex items-center h-5 mt-1">
                            <input type="checkbox" name="habeasData" class="w-5 h-5 text-primary border-gray-300 rounded focus:ring-primary" required>
                        </div>
                        <div class="text-xs text-gray-600 leading-relaxed">
                            Autorizo el tratamiento de mis datos personales según la <a href="#" class="text-primary font-bold hover:underline">Política de Privacidad</a> y acepto recibir información de la campaña.
                        </div>
                    </label>
                </div>

                <button type="submit" id="btnSubmit" 
                    class="w-full py-4 bg-primary hover:bg-green-800 text-white font-bold rounded-xl shadow-lg shadow-primary/30 transform hover:-translate-y-0.5 transition-all flex justify-center items-center gap-2 text-lg">
                    Confirmar Asistencia
                </button>
            </form>

            <div id="successMessage" class="hidden text-center py-8">
                <div class="w-20 h-20 bg-green-100 text-green-600 rounded-full flex items-center justify-center mx-auto mb-4">
                    <span class="material-icons-round text-4xl">check_circle</span>
                </div>
                <!-- ... success message ... -->
                <h3 class="text-2xl font-bold text-gray-900 mb-2">¡Registro Exitoso!</h3>
                <p class="text-gray-600 mb-6">Gracias por asistir a esta reunión.</p>
                <button onclick="window.location.reload()" class="text-primary font-bold hover:underline">Registrar otro asistente</button>
            </div>
        </div>
    </div>

    <!-- Load Colombia Data -->
    <script src="/js/colombia-data.js"></script>
    <script>
        // Init Location Selectors
        document.addEventListener('DOMContentLoaded', () => {
            const deptoSelect = document.getElementById('departamentoSelect');
            const muniSelect = document.getElementById('municipioSelect');
            const otroContainer = document.getElementById('otroMunicipioContainer');
            const otroInput = document.getElementById('otroMunicipioInput');

            // Populate Depts
            const deptos = Object.keys(window.DEPARTAMENTOS_MUNICIPIOS).sort();
            deptos.forEach(d => {
                const opt = document.createElement('option');
                opt.value = d;
                opt.textContent = d;
                deptoSelect.appendChild(opt);
            });
            
            // Set default if Meta exists (it does)
            deptoSelect.value = "Meta";
            loadMunis("Meta");

            deptoSelect.addEventListener('change', (e) => {
                loadMunis(e.target.value);
            });

            muniSelect.addEventListener('change', (e) => {
                if(e.target.value === 'OTRO') {
                    otroContainer.classList.remove('hidden');
                    otroInput.required = true;
                } else {
                    otroContainer.classList.add('hidden');
                    otroInput.required = false;
                    otroInput.value = '';
                }
            });

            function loadMunis(depto) {
                muniSelect.innerHTML = '<option value="">Selecciona...</option>';
                if (!depto || !window.DEPARTAMENTOS_MUNICIPIOS[depto]) return;
                
                window.DEPARTAMENTOS_MUNICIPIOS[depto].forEach(m => {
                    const opt = document.createElement('option');
                    opt.value = m;
                    opt.textContent = m;
                    muniSelect.appendChild(opt);
                });
                
                // Add "Otro" option
                const otherOpt = document.createElement('option');
                otherOpt.value = 'OTRO';
                otherOpt.textContent = 'OTRO (Escribir manualmente)';
                muniSelect.appendChild(otherOpt);
                
                 // Set Villavicencio default if strictly Meta
                if(depto === 'Meta') {
                    muniSelect.value = 'Villavicencio';
                }
            }
        });

        async function submitAttendance(e) {
            e.preventDefault();
            const btn = document.getElementById('btnSubmit');
            const originalText = btn.innerHTML;
            const form = document.getElementById('attendanceForm');
            const successMsg = document.getElementById('successMessage');

            btn.disabled = true;
            btn.innerHTML = '<span class="material-icons-round animate-spin">refresh</span> Registrando...';

            const formData = new FormData(form);
            const data = Object.fromEntries(formData.entries());
            data.habeasData = !!data.habeasData;
            
            // Handle "OTRO" municipality
            if (data.municipio === 'OTRO' && data.municipio_otro) {
                data.municipio = data.municipio_otro;
            }
            delete data.municipio_otro; // clean up

            try {
                const response = await fetch('/reuniones/register', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });

                if (response.ok) {
                    form.classList.add('hidden');
                    successMsg.classList.remove('hidden');
                } else {
                    const errorData = await response.json();
                    let msg = errorData.message;
                    if(Array.isArray(msg)) msg = msg.join(', '); // Validation array
                    alert('Error: ' + (msg || 'No se pudo registrar.'));
                    btn.disabled = false;
                    btn.innerHTML = originalText;
                }
            } catch (error) {
                console.error(error);
                alert('Error de conexión.');
                btn.disabled = false;
                btn.innerHTML = originalText;
            }
        }
    </script>
</body>
</html>
