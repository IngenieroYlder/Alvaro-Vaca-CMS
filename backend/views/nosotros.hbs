<!DOCTYPE html>
<html lang="es">

<head>
    {{> head}}
    <title>{{meta.title}} | {{empresaNombre}}</title>
    {{> styles}}
    <style>
        /* Slider CSS */
        .slider-viewport {
            overflow: hidden;
            width: 100%;
            position: relative;
            padding: 2rem 0;
            /* Space for shadows */
        }

        .slider-track {
            display: flex;
            transition: transform 0.6s cubic-bezier(0.25, 1, 0.5, 1);
            width: 100%;
        }

        .slider-slide {
            min-width: 100%;
            flex: 0 0 100%;
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            /* 3 columns desktop */
            gap: 2rem;
            padding: 0 1rem;
            box-sizing: border-box;
        }

        @media (max-width: 1024px) {
            .slider-slide {
                grid-template-columns: repeat(2, 1fr);
                /* 2 columns tablet */
            }
        }

        @media (max-width: 640px) {
            .slider-slide {
                grid-template-columns: 1fr;
                /* 1 column mobile */
            }
        }

        /* Card Hover Effect */
        .value-card {
            transition: all 0.3s ease;
        }

        .value-card:hover {
            transform: translateY(-5px);
        }
    </style>
</head>

<body class="bg-gray-50 font-sans text-gray-900 overflow-x-hidden">

    {{> header}}

    <!-- Hero Section -->
    {{> hero
    label=(lookup meta 'heroLabel')
    title=(lookup meta 'title')
    subtitle=(lookup meta 'subtitle')
    image=(lookup meta 'mainImage')
    ctaText=(lookup meta 'heroCtaText')
    ctaLink=(lookup meta 'heroCtaLink')
    }}

    <!-- Standards Marquee -->
    <div
        class="py-12 border-y border-gray-100 overflow-hidden bg-white/50 backdrop-blur-sm relative w-full max-w-[100vw]">
        <p class="text-center text-[10px] uppercase tracking-[0.3em] font-bold text-gray-400 mb-8">Nuestros Estándares &
            Certificaciones</p>
        <div
            class="flex whitespace-nowrap opacity-40 hover:opacity-100 transition-opacity duration-500 w-full overflow-hidden">
            <div
                class="flex gap-16 md:gap-32 px-12 items-center font-black text-2xl md:text-3xl text-primary/20 select-none animate-marquee">
                <span>GESTIÓN INTEGRAL</span><span>NORMATIVIDAD VIGENTE</span><span>TRANSPARENCIA</span><span>SEGURIDAD
                    VIAL</span><span>HSEQ</span><span>EFICIENCIA</span>
                <span>GESTIÓN INTEGRAL</span><span>NORMATIVIDAD VIGENTE</span><span>TRANSPARENCIA</span><span>SEGURIDAD
                    VIAL</span><span>HSEQ</span><span>EFICIENCIA</span>
            </div>
        </div>
    </div>

    <!-- Layout: Misión/Visión (Left) & Sticky Image (Right) -->
    <section class="py-24 px-6 relative bg-white w-full max-w-[100vw]">
        <div class="max-w-7xl mx-auto">
            <div class="grid lg:grid-cols-2 gap-16 items-start">

                <!-- Left Column: Mision / Vision -->
                <div class="space-y-16 lg:pr-12">
                    <!-- Mision -->
                    <div class="space-y-6 group">
                        <div class="flex items-center gap-4">
                            <div class="w-12 h-1 bg-secondary group-hover:w-20 transition-all duration-500"></div>
                            <h2 class="text-4xl md:text-5xl font-black text-primary tracking-tighter uppercase">
                                {{#if meta.misionTitle}}{{meta.misionTitle}}{{else}}Nuestra Misión{{/if}}
                            </h2>
                        </div>
                        <p
                            class="text-lg md:text-xl text-gray-500 leading-relaxed font-light border-l-4 border-secondary/20 pl-6">
                            "{{#if meta.misionText}}{{meta.misionText}}{{else}}Brindar servicios integrales de grúas,
                            remolque, custodia y administración de patios municipales, con eficiencia, seguridad y
                            transparencia.{{/if}}"
                        </p>
                    </div>

                    <!-- Vision -->
                    <div class="space-y-6 group">
                        <div class="flex items-center gap-4">
                            <div class="w-12 h-1 bg-primary group-hover:w-20 transition-all duration-500"></div>
                            <h2 class="text-4xl md:text-5xl font-black text-primary tracking-tighter uppercase">
                                {{#if meta.visionTitle}}{{meta.visionTitle}}{{else}}Nuestra Visión{{/if}}
                            </h2>
                        </div>
                        <p
                            class="text-lg md:text-xl text-gray-500 leading-relaxed font-light border-l-4 border-primary/20 pl-6">
                            "{{#if meta.visionText}}{{meta.visionText}}{{else}}Nuestra organización, se ha trazado la
                            meta de ser reconocidos a nivel municipal y regional como una empresa líder en la operación
                            de grúas y patios, destacándonos por la calidad del servicio.{{/if}}"
                        </p>
                    </div>

                    <!-- CTA Link -->
                    <div class="pt-8">
                        <a href="{{#if meta.workLink}}{{meta.workLink}}{{else}}/contacto{{/if}}"
                            class="inline-flex items-center gap-3 px-8 py-4 bg-secondary text-white rounded-full font-bold shadow-lg shadow-secondary/30 hover:shadow-secondary/50 hover:-translate-y-1 transition-all duration-300 group overflow-hidden relative">
                            <span class="relative z-10 tracking-widest uppercase text-sm">Trabaja con nosotros</span>
                            <span
                                class="material-symbols-outlined relative z-10 text-xl group-hover:translate-x-1 transition-transform">arrow_forward</span>
                            <div
                                class="absolute inset-0 -translate-x-full group-hover:animate-shimmer bg-gradient-to-r from-transparent via-white/20 to-transparent z-0">
                            </div>
                        </a>
                    </div>
                </div>

                <!-- Right Column: Sticky Image -->
                <div class="lg:sticky lg:top-32 relative">
                    {{#if meta.sectionImage}}
                    <div
                        class="rounded-[40px] overflow-hidden shadow-2xl shadow-gray-200 aspect-[4/5] md:aspect-square lg:aspect-[4/5] relative group bg-gray-100">
                        <img src="{{meta.sectionImage}}" alt="Nuestra Empresa"
                            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105">
                        <div
                            class="absolute inset-0 bg-gradient-to-t from-black/40 via-transparent to-transparent opacity-60">
                        </div>

                        <!-- Floating Badge -->
                        <div
                            class="absolute bottom-8 right-8 bg-white/90 backdrop-blur-md p-6 rounded-3xl shadow-lg max-w-[200px] hidden md:block">
                            <p class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-1">Experiencia</p>
                            <p class="text-3xl font-black text-primary">10+ Años</p>
                            <p class="text-sm text-gray-500 mt-1">Liderando el sector</p>
                        </div>
                    </div>
                    {{else}}
                    <div
                        class="rounded-[40px] bg-gray-100 aspect-square flex items-center justify-center text-gray-300">
                        <span class="material-symbols-outlined text-6xl">image</span>
                    </div>
                    {{/if}}
                </div>

            </div>
        </div>
    </section>

    <!-- NEW SECTION: Organizational Values Slider -->
    <section class="py-24 bg-white relative border-t border-gray-100 w-full max-w-[100vw] overflow-hidden">
        <!-- Background Pattern -->
        <div class="absolute inset-0 opacity-[0.03] pointer-events-none"
            style="background-image: radial-gradient(#000 1px, transparent 1px); background-size: 32px 32px;"></div>

        <div class="max-w-7xl mx-auto px-6 relative">

            <div class="text-center max-w-3xl mx-auto mb-16">
                <!-- Styled Label with Dot -->
                <div
                    class="inline-flex items-center gap-2 px-4 py-1.5 bg-white border border-secondary/30 rounded-full shadow-sm mb-6">
                    <span class="w-2.5 h-2.5 bg-secondary rounded-full animate-pulse"></span>
                    <span class="text-xs font-bold text-primary tracking-widest uppercase">Nuestra Cultura</span>
                </div>
                <h2
                    class="text-3xl sm:text-4xl md:text-5xl font-black text-primary tracking-tighter mb-6 w-full break-words hyphens-auto leading-none">
                    VALORES ORGANIZACIONALES
                </h2>
                <p class="text-lg md:text-xl text-gray-500 font-light max-w-2xl mx-auto">Los pilares que sostienen
                    nuestra operación y garantizan la
                    excelencia en cada servicio.</p>
            </div>

            {{#if meta.values}}
            <div class="slider-viewport" id="valuesViewport">
                <div class="slider-track" id="valuesTrack">
                    <!-- Items rendered by JS in groups -->
                    {{#each meta.values}}
                    <div class="value-item-data hidden" data-icon="{{icon}}" data-title="{{title}}"
                        data-desc="{{description}}">
                    </div>
                    {{/each}}
                </div>
            </div>

            <!-- Pagination Dots -->
            <div class="flex justify-center gap-3 mt-12" id="valuesDots"></div>
            {{else}}
            <div class="text-center py-12 text-gray-400 bg-gray-50 rounded-3xl border border-dashed border-gray-200">
                No hay valores configurados en el sistema.
            </div>
            {{/if}}

        </div>
    </section>


    <!-- Main Content HTML (Bottom) -->
    {{#if meta.content}}
    <section class="py-24 px-6 relative bg-gray-50/50 w-full max-w-[100vw] overflow-hidden">
        <div
            class="max-w-4xl mx-auto prose prose-xl prose-primary text-gray-600 leading-relaxed font-light prose-headings:font-black prose-headings:tracking-tighter">
            {{{meta.content}}}
        </div>
    </section>
    {{/if}}

    <!-- Footer CTA -->
    <section class="py-24 px-6 bg-white border-t border-gray-100 w-full max-w-[100vw] overflow-hidden">
        <div class="max-w-7xl mx-auto">
            <div
                class="bg-primary text-white rounded-[40px] p-8 md:p-16 relative overflow-hidden shadow-2xl shadow-primary/30 text-center flex flex-col items-center">
                <!-- Background Decoration -->
                <div
                    class="absolute top-0 right-0 w-96 h-96 bg-secondary/20 rounded-full blur-[100px] -translate-y-1/2 translate-x-1/2">
                </div>
                <div
                    class="absolute bottom-0 left-0 w-64 h-64 bg-blue-500/20 rounded-full blur-[80px] translate-y-1/2 -translate-x-1/2">
                </div>

                <h2 class="text-3xl md:text-5xl font-black tracking-tighter mb-8 relative z-10 text-center w-full">
                    Compromiso con el Meta</h2>

                <!-- New Image (Dynamic) with Mobile Fixes -->
                <img src="{{#if meta.footerImage}}{{meta.footerImage}}{{else}}/img/compromiso.png{{/if}}"
                    alt="Compromiso"
                    class="relative z-10 mb-8 h-[200px] md:h-[250px] w-full max-w-sm object-cover mx-auto rounded-3xl border-4 border-white/20 shadow-xl">

                <p class="text-lg md:text-xl text-white/70 font-light max-w-2xl mx-auto mb-10 relative z-10">
                    {{#if meta.footerDescription}}{{meta.footerDescription}}{{else}}Estamos presentes en los municipios
                    claves, garantizando orden y legalidad.
                    Únete a nuestra gestión o contáctanos para más información.{{/if}}
                </p>
                <a href="{{#if meta.footerCtaLink}}{{meta.footerCtaLink}}{{else}}/contacto{{/if}}"
                    class="inline-flex items-center justify-center btn-pill btn-xl bg-secondary text-white hover:bg-white hover:text-primary transition-all shadow-xl shadow-black/20 relative z-10 transform hover:scale-105 duration-300 mx-auto px-10">
                    {{#if meta.footerCtaText}}{{meta.footerCtaText}}{{else}}Contactar Sede Principal{{/if}}
                </a>
            </div>
        </div>
    </section>

    {{> footer}}

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Values Slider Logic
            const rawData = document.querySelectorAll('.value-item-data');
            const track = document.getElementById('valuesTrack');
            const dotsContainer = document.getElementById('valuesDots');
            const viewport = document.getElementById('valuesViewport');

            if (rawData.length > 0 && track) {
                const items = Array.from(rawData).map(el => ({
                    icon: el.dataset.icon,
                    title: el.dataset.title,
                    desc: el.dataset.desc
                }));

                // Responsiveness: Determine items per slide
                const getItemsPerSlide = () => {
                    if (window.innerWidth < 640) return 1;
                    if (window.innerWidth < 1024) return 2;
                    return 3;
                };

                let itemsPerSlide = getItemsPerSlide();
                let totalSlides = Math.ceil(items.length / itemsPerSlide);
                let currentSlide = 0;
                let autoPlayInterval;

                const renderSlides = () => {
                    track.innerHTML = '';
                    dotsContainer.innerHTML = '';
                    itemsPerSlide = getItemsPerSlide();
                    totalSlides = Math.ceil(items.length / itemsPerSlide);

                    // Re-calculate current slide to avoid overflow if totalSlides reduced
                    if (currentSlide >= totalSlides) currentSlide = totalSlides - 1;
                    if (currentSlide < 0) currentSlide = 0;

                    for (let i = 0; i < totalSlides; i++) {
                        const slide = document.createElement('div');
                        slide.className = 'slider-slide';

                        const group = items.slice(i * itemsPerSlide, (i + 1) * itemsPerSlide);

                        group.forEach(item => {
                            const card = document.createElement('div');
                            card.className = 'value-card bg-white p-8 md:p-10 rounded-[32px] border border-gray-100 shadow-xl shadow-gray-200/40 h-full flex flex-col items-start gap-4 relative overflow-hidden group hover:border-secondary/20';
                            card.innerHTML = `
                                <div class="absolute top-0 right-0 p-8 opacity-10 group-hover:opacity-20 transition-opacity">
                                    <span class="material-symbols-outlined text-8xl text-secondary">${item.icon}</span>
                                </div>
                                <div class="w-16 h-16 bg-gray-50 rounded-2xl flex items-center justify-center text-primary group-hover:bg-secondary group-hover:text-white transition-colors duration-300 shrink-0">
                                    <span class="material-symbols-outlined text-3xl">${item.icon}</span>
                                </div>
                                <div class="relative z-10 mt-2">
                                    <h3 class="text-xl font-black text-primary mb-3 tracking-tight">${item.title}</h3>
                                    <p class="text-gray-500 text-base leading-relaxed font-medium">${item.desc}</p>
                                </div>
                            `;
                            slide.appendChild(card);
                        });

                        track.appendChild(slide);

                        // Dot
                        const dot = document.createElement('button');
                        dot.className = 'bg-gray-200 w-3 h-3 rounded-full transition-all duration-300 hover:bg-gray-300';
                        dot.onclick = () => {
                            clearInterval(autoPlayInterval);
                            goToSlide(i);
                            startAutoPlay();
                        };
                        dotsContainer.appendChild(dot);
                    }
                    updateSliderPosition();
                };

                const updateSliderPosition = () => {
                    track.style.transform = `translateX(-${currentSlide * 100}%)`;
                    // Update dots
                    Array.from(dotsContainer.children).forEach((dot, idx) => {
                        if (idx === currentSlide) {
                            dot.className = 'bg-secondary w-8 h-3 rounded-full transition-all duration-300';
                        } else {
                            dot.className = 'bg-gray-200 w-3 h-3 rounded-full transition-all duration-300 hover:bg-gray-300';
                        }
                    });
                };

                const goToSlide = (index) => {
                    currentSlide = index;
                    updateSliderPosition();
                };

                const startAutoPlay = () => {
                    clearInterval(autoPlayInterval);
                    autoPlayInterval = setInterval(() => {
                        let next = currentSlide + 1;
                        if (next >= totalSlides) next = 0;
                        goToSlide(next);
                    }, 5000);
                };

                // Init
                renderSlides();
                startAutoPlay();
                updateSliderPosition();

                // Resize Listener
                let resizeTimer;
                window.addEventListener('resize', () => {
                    clearTimeout(resizeTimer);
                    resizeTimer = setTimeout(() => {
                        renderSlides();
                    }, 200);
                });
            }
        });
    </script>
</body>

</html>